# ByteC Postback 本地开发环境配置

# 应用配置
DEBUG=true
HOST=0.0.0.0
PORT=8080

# 数据库配置（使用SQLite进行本地开发）
DATABASE_URL=sqlite+aiosqlite:///./postback_local.db
DATABASE_ECHO=true

# Token配置（开发用密钥）
TS_TOKEN_SECRET=dev-ts-token-secret-key-for-local-testing
TLM_TOKEN_SECRET=dev-tlm-token-secret-key-for-local-testing
TOKEN_EXPIRE_HOURS=24

# 日志配置
LOG_LEVEL=DEBUG

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=8081

# 业务配置
DATA_RETENTION_DAYS=7
MAX_REQUESTS_PER_MINUTE=1000
ENABLE_DUPLICATE_CHECK=true 
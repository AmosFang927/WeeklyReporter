# 本地测试环境配置
# 这个文件用于本地数据库测试

# 应用配置
DEBUG=true
LOG_LEVEL=DEBUG

# 数据库配置
DATABASE_URL=postgresql+asyncpg://postback:postback123@localhost:5432/postback_db
DATABASE_ECHO=true

# Redis配置
REDIS_URL=redis://localhost:6379/0

# 服务器配置
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Token配置
TS_TOKEN_SECRET=local-ts-token-secret-for-testing
TLM_TOKEN_SECRET=local-tlm-token-secret-for-testing
TOKEN_EXPIRE_HOURS=24

# 业务配置
DATA_RETENTION_DAYS=30
MAX_REQUESTS_PER_MINUTE=1000
ENABLE_DUPLICATE_CHECK=true

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=8001

# 测试配置
TEST_MODE=true
CREATE_SAMPLE_DATA=true 